{
    "id": "org.kde.kalzium",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "kalzium",
    "rename-icon": "kalzium",
    "finish-args": [
        "--device=dri",
        "--filesystem=home",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "cleanup": [
        "/doc",
        "/include",
        "/lib/cmake",
        "/lib/libexec",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/eigen3",
        "/share/man",
        "/share/pkgconfig",
        "*.a"
    ],
    "modules": [
        {
            "name": "eigen",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "cleanup": [
                "*.la"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.com/libeigen/eigen/-/archive/3.4.0/eigen-3.4.0.tar.bz2",
                    "sha256": "b4c198460eba6f28d34894e3a5710998818515104d6e74e5cc331ce31e46e626",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 666,
                        "stable-only": true,
                        "url-template": "https://gitlab.com/libeigen/eigen/-/archive/$version/eigen-$version.tar.bz2"
                    }
                }
            ]
        },
        {
            "name": "kalzium",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.08.2/src/kalzium-24.08.2.tar.xz",
                    "sha256": "9b8c8ef30333c23ab29bb9bce3d7324cf9dd1a36af481d326d2c7b6324b2b357",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kalzium-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
