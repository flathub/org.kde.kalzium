{
    "id": "org.kde.kalzium",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "kalzium",
    "rename-icon": "kalzium",
    "finish-args": [
        "--device=dri",
        "--filesystem=home",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "cleanup": [
        "/doc",
        "/include",
        "/lib/cmake",
        "/lib/libexec",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/eigen3",
        "/share/man",
        "/share/pkgconfig",
        "*.a"
    ],
    "modules": [
        {
            "name": "eigen",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "cleanup": [
                "*.la"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.com/libeigen/eigen/-/archive/5.0.0/eigen-5.0.0.tar.bz2",
                    "sha256": "bc5888a4e8538af18d4734c4266a538c7490200f76bc978b66299600189d51c2",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 666,
                        "stable-only": true,
                        "url-template": "https://gitlab.com/libeigen/eigen/-/archive/$version/eigen-$version.tar.bz2"
                    }
                }
            ]
        },
        {
            "name": "kalzium",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.08.1/src/kalzium-25.08.1.tar.xz",
                    "sha256": "64ecba7f0cc8333ee528fc951e500e591d263380e72af59e36b37654a8e1ae8b",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kalzium-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
